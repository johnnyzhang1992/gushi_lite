/**app.wxss**/
@import 'style/weui.wxss';
page {
    color: #1a1a1a;
    font-size: 36rpx;
    /* color: #666; */
    letter-spacing: 0.5px;
     background: #fff;
    -webkit-tap-highlight-color: rgba(26,26,26,0);
    font-family:  PingFangSC-Light, PingFang S;
	padding-bottom: env(safe-area-inset-bottom);
}
.container{
    height: 100%;
    display: flex;
    background: #fff;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 100rpx 0;
    box-sizing: border-box;
}
.page{
    background: #fff;
}

.page__hd {
    padding: 20px;
}

.page__bd {
    padding-bottom: 20px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888;
    text-align: left;
    font-size: 14px;
}

.page {
    padding-top: 10px;
}

.book_cover_image {
    text-align: center;
}

.book_cover_image image {
    width: 220rpx;
    height: 328rpx;
}

.weui-badge {
    padding: 0.25em 0.5em;
    min-width: 15px;
    background-color: #43ce7b;
}

input[type=hidden] {
    display: none;
}

textarea {
    min-height: 100rpx;
    width: 90%;
    padding: 20rpx 30rpx;
    border: 1px solid #ddd;
    margin-bottom: 30rpx;
    background-color: #fff;
}

.white-padding {
    border-bottom: 3px solid #fff;
}

.divide {
    height: 8px;
    width: 100%;
    background: #efefef;
}

.nav-breadcrumb {
    background-color: #fff;
    padding: 3px 10px;
    margin-top: 5px;
    font-size: 13px;
}

.nav-breadcrumb .item:before {
    padding: 0 7px;
    color: #ccc;
    content: "/\00a0";
}

.nav-breadcrumb .item:first-child::before {
    content: '';
    padding-left: 0;
}

.share {
    background-color: #337ab7;
    position: fixed;
    right: 15px;
    padding: 8px;
    border-radius: 100%;
    bottom: 70px;
}

.share image, .return image {
    width: 22px;
    height: 22px;
    display: block;
}

.return {
    background-color: #337ab7;
    position: fixed;
    left: 15px;
    padding: 8px;
    border-radius: 100%;
    bottom: 70px;
}

ad {
    margin-top: 10px;
    margin-bottom: 10px;
}

.align-right{
    text-align: right;
}
.align-left{
    text-align: left;
}
::-webkit-scrollbar{
    display: none;
}
