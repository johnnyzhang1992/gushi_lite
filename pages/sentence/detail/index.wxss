/* pages/poem/detail/index.wxss */
page,
.panel {
	background-color: #f5f5f5;
}
.weui-media-box__title {
	white-space: initial;
	font-size: 14px;
	text-align: center;
	color: #666;
	display: block;
	/* padding: 0 10px; */
}
.weui-media-box {
	padding: 10px 10px;
}
.poem-content {
	padding-bottom: 10px;
}
.badge-list {
	padding-top: 0;
	text-align: left;
	padding-left: 15px;
}
.badge-list .weui-badge {
	margin-right: 5px;
	margin-bottom: 5px;
}
.page__hd {
	padding: 10px 15px 0 15px;
}
.weui-panel {
	margin-top: 0;
}
.weui-panel:before {
	border-top: none;
}
.page__title {
	font-size: 40rpx;
	color: #333;
	text-align: center;
}
.page__desc {
	text-align: center;
}
.author-name {
	display: inline-block;
}
.author-name.active {
	color: #337ab7;
}
.title {
	padding: 5px 20px;
	color: #333;
	font-size: 14px;
}
.poem-bg {
	padding: 10px 15px 0 15px;
	font-size: 13px;
	color: #888;
	text-align: justify;
	display: block;
	text-indent: 2em;
}
.page__content {
	padding-bottom: 0;
}
/* top section */
.top-section {
	margin: 15px 6% 0 6%;
	text-align: right;
}
.top-section image {
	width: 22px;
	height: 22px;
	display: block;
}
.top-btn,
.top-collect {
	display: inline-block;
	padding: 6px 12px;
	background-color: #337ab7;
	margin-left: 10px;
}
.collect {
	position: fixed;
	bottom: 0;
	left: 0;
	padding: 8px 0 8px 15px;
	font-size: 14px;
	border-top: 1px solid #f5f5f5;
	width: 100%;
	opacity: 0.8;
	background-color: #d7d6dc;
}
.collect.iphoneX_view {
	bottom: 68rpx;
}
.collect-img image {
	height: 24px;
	width: 24px;
	vertical-align: bottom;
}
.collect-img .text {
	display: none;
	line-height: 24px;
	padding-left: 5px;
}
.collect-img .text.active {
	color: #337ab7;
}
.copy {
	background-color: #337ab7;
	position: fixed;
	left: 10px;
	padding: 8px;
	border-radius: 100%;
	bottom: 50px;
}
.copy image {
	width: 22px;
	height: 22px;
	display: block;
}

.sentence-section {
	clear: both;
	overflow: hidden;
	min-height: 60vh;
	margin: 2% 6% 8% 6%;
	position: relative;
	background-color: #fff;
	font-family: SimSun, FangSong, STSong, STZhongsong, LiSu, KaiTi,
		"Microsoft YaHei";
}
.sentence-title {
	color: #333;
	width: 100%;
	font-size: x-large;
	writing-mode: vertical-rl;
	padding: 0 15px;
	box-sizing: border-box;
}
.sentence-title text {
	display: block;
	letter-spacing: 3px;
	padding: 60px 0;
}
.sentence-origin {
	text-align: right;
	writing-mode: vertical-lr;
	font-size: large;
	position: absolute;
	left: 10px;
	height: calc(100% - 20px);
}
.sentence-origin .author {
	font-size: 0.8em;
	display: block;
	text-align: right;
	padding: 20px 10px;
	box-sizing: border-box;
}
.sentence-content {
	font-size: 14px;
	padding: 0 15px;
}
.sentence-content .normal {
	color: #888;
}
.navigator-hover {
	background-color: #fff;
	color: #337ab7;
}
.weui-cells {
	font-size: 14px;
	color: #666;
}
.weui-cell {
	padding: 6px 15px;
}
.list weui-cell_access {
	font-size: 12px;
}
.poem-item {
	/*margin-top: 20px;*/
	display: block;
}
.poem-item view {
	width: 100%;
	display: block;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.poem-item .poem-title {
	color: #333;
	font-size: 14px;
}
.poem-item .poem-title.author {
	font-size: 16px;
	max-width: 72%;
}
.poem-item .poem-title.content {
	font-size: 13px;
	color: #888;
	margin-top: 5px;
}
.poem-item .poem-author {
	color: #888;
	font-size: 13px;
	/* padding: 5px 0; */
	position: absolute;
	right: 15px;
	top: 10px;
	display: inline-block;
	width: auto;
}
.poem-item .poem-content {
	font-size: 14px;
	color: #454545;
}