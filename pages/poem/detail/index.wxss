  color: #888;
  text-align: justify;
  display: block;
  text-indent: 2em;
}

.page__content {
  padding-bottom: 0;
}

.tab-h {
  height: 40px;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 40px;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  /* position: fixed;
  top: 0; 
  left: 0;  */
  z-index: 99;
}

.tab-item {
  /* margin: 0 10px; */
  display: inline-block;
  width: 25%;
  text-align: center;
  box-sizing: border-box;
}

.tab-item.active {
  color: #337ab7;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 2px;
  width: 100%;
  background: #337ab7;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 16px;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30px;
  box-sizing: border-box;
  height: 180px;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.avatar {
  width: 100px;
  height: 100px;
  position: relative;
  padding-right: 30px;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40px;
  height: 40px;
  position: absolute;
  bottom: -2px;
  right: 20px;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.scoll-h {
  height: 100%;
  -webkit-overflow-scrolling : touch;  
}

.tab-content {
  padding-bottom: 40px;
}

.tab-list-content {
  padding: 10px 8% 12% 8%;
  /* width: 94%; */
  box-sizing: border-box;
}

.tab-list-content .item {
  font-size: 34rpx;
  color: #454545;
  text-align: justify;
  display: block;
  text-indent: 1em;
  margin-bottom: 6px;
}

.tab-list-content .yi {
  text-indent: 0;
}

.collect {
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 8px 0 8px 15px;
  font-size: 14px;
  border-top: 1px solid #f5f5f5;
  width: 100%;
  opacity: 0.8;
  background-color: #d7d6dc;
  padding-bottom: env(safe-area-inset-bottom);
}

.collect.iphoneX_view {
  bottom: 68rpx;
}

.collect-img image {
  height: 24px;
  width: 24px;
  vertical-align: bottom;
}

.collect-img .text {
  display: inline-block;
  line-height: 24px;
  padding-left: 5px;
}

.collect-img .text.active {
  color: #337ab7;
}

.audio.iphoneX_view, .copy.iphoneX_view, .share.iphoneX_view,
.return.iphoneX_view {
  bottom: 84px;
}

.audio {
  background-color: #337ab7;
  position: fixed;
  right: 12px;
  padding: 8px;
  border-radius: 100%;
  bottom: 70px;
}

.audio image {
  width: 22px;
  height: 22px;
  display: block;
}

.copy {
  background-color: #337ab7;
  position: fixed;
  left: 12px;
  padding: 8px;
  border-radius: 100%;
  bottom: 70px;
}

.copy image {
  width: 22px;
  height: 22px;
  display: block;
}