}
.collect{
  position: fixed;
  bottom: 0;
  left:0;
  padding:5px 0 5px 15px;
  font-size:14px;
  border-top:1px solid #f5f5f5;
  width:100%;
  opacity: 0.8;
  background-color:#fff;
}
.collect-img image{
  height: 24px;
  width:24px;
  vertical-align: bottom
}
.collect-img .text{
